// colour
$black: #000;
$white: #fff;
$colour: $black;
$colourAlt: #a8020e;
$colourDark: darken($colourAlt, 5%);
$colourSelected: #000;
$colourBackground: $white;
$colourText: #000;
$grey: #aaa;
$darkGrey: #444;
$colourNav: #808090;
$lightGrey: lighten($colourNav, 40%);

// size
$space: 8px;
$spaceBorder: $space / 3;
$sizeNav: 120px;
$sizeSubNav: 50px;
$sizeBreadcrumb: 35px;

// index
$zNav: 100;
$zFooter: 10;
$zMenu: 50;
$zLandingPage: 200;
$zLoadingScreen: 300;

// transition
$transition: 0.25s;
$transitionNormal: 0.25s;
$transitionSlow: 0.5s;
$transitionSlower: 0.75s;

// breakpoints
$small: 480px;
$mobile: 700px;
$medium: 769px;
$tablet: 960px;
$large: 1220px;

// borders
$border: 4px double $white;
$borderBlack: 4px double $black;

$fontStack: 'Playfair Display', serif;
$fontStackSansSerif: 'Karla', sans-serif;
$letterSpacing: 1px;
$lineHeight: 1.2;

// size
$fontTiny: 12px;
$fontSmaller: 13px;
$fontSmall: 16px;
$fontSize: 20px;
$fontMedium: 24px;
$fontMediumLarge: 29px;
$fontLarge: 32px;

.noselect {
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	-o-user-select: none;
	user-select: none;
}

@mixin pad-y($y) {
	padding-top: $space * $y;
	padding-bottom: $space * $y;
}

@mixin pad-x($x) {
	padding-left: $space * $x;
	padding-right: $space * $x;
}

@mixin pad-xy($x, $y) {
	padding-top: $space * $y;
	padding-bottom: $space * $y;
	padding-left: $space * $x;
	padding-right: $space * $x;
}

@mixin pad($t, $l, $b, $r) {
	padding-top: $space * $t;
	padding-bottom: $space * $b;
	padding-left: $space * $l;
	padding-right: $space * $r;
}

.mobile-hide {
	@media screen and (max-width: $medium) {
		display: none;
	}
}

.mobile-show {
	display: none;

	@media screen and (max-width: $medium) {
		display: block;

		&.mobile-inline {
			display: inline;
		}
	}
}

.hidden {
	opacity: 0;
	pointer-events: none;
}

.inline {
	display: inline;
}

.float-right {
	float: right;
}

.page-break {
	width: 100%;
	border-bottom: $space solid $colour;
}

.display-none {
