// colour
$black: #080808;
$white: #fff;
$red: #a8020e;
$colourHover: #f00;
$colourActive: pink;
$colourNav: $black;
$colourNavActive: $black;
$colourBreadcrumb: #ddd;
$colourBreadcrumbText: #444;
$colourText: $black;
$colourMobileMenu: rgba($black, 0.9);

// gradients/ backgrounds
$backgroundCartForm: linear-gradient(to right, $colourBreadcrumb, lighten($colourBreadcrumb, 25%));
$backgroundCustom: repeating-linear-gradient(-45deg, $black, $black 1px, rgba($black, 0) 1px, rgba($black, 0) 8px);
$backgroundCustomAlt: repeating-linear-gradient(-45deg, rgba($white, 0), rgba($white, 0.05) 32px);
$backgroundImage1: url("https://cdn.shopify.com/s/files/1/1950/6433/files/crosshatch64.png?17626610360363650453");
$dropShadow: 5px 5px 10px rgba($black, 0.5);

// size
$space: 8px;
$spaceBorder: $space / 3;
$sizeSubNav: 50px;
$sizeBreadcrumb: 35px;
$navHeight: 90px;
$navThreshold: 32px;
$sizeSidebar: 220px;
$sizeFilterDropdown: 300px;

// breakpoints
$siteWidth: 1200px;
$mobile: 700px;
$tablet: 900px;

// index
$indexNav: 100;
$indexFilterDropdown: 80;
$indexNavDropdown: 90;
$indexPromo: 101;
$indexFooter: 10;
$indexMobileMenu: 90;
$indexAudioIcon: 95;
$indexLandingPage: 200;
$indexLoadingScreen: 300;
$indexPassword: 999;

// transition
$transition: 0.25s;
$transitionNormal: 0.25s;
$transitionSlow: 0.5s;
$transitionSlower: 0.75s;

// borders
$border: 4px double $white;
$borderBlack: 4px double $black;
$borderSingle: 1px solid $black;
$borderSingleGrey: 1px solid rgba($black, 0.4);
$borderDouble: $borderBlack;
$borderBlock: $space*2 solid $black;

$fontStack: 'Open Sans', sans-serif;
$fontStackCursive: 'Archivo Black', sans-serif;
$lineHeight: 1.4;
$letterSpacing: 1px; //normal;

// sizing
$fontSmall: 11px;
$fontMedium: 13px;
$fontSize: 14px;
$fontMobileMenu: 18px;
$fontLarge: 28px;
$fontLargeMobile: 22px;
$fontHuge: 52px;
$fontHugeMobile: 36px;

.noselect {
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	-o-user-select: none;
	user-select: none;
}

@mixin padding($x, $y) {
	padding-top: $space * $y;
	padding-bottom: $space * $y;
	padding-left: $space * $x;
	padding-right: $space * $x;
}

@mixin margin($x, $y) {
	margin-top: $space * $y;
	margin-bottom: $space * $y;
	margin-left: $space * $x;
	margin-right: $space * $x;
}

.tablet-hide {
	@media screen and (max-width: $tablet) {
		display: none !important;
	}
}

.tablet-show {
	display: none;

	@media screen and (max-width: $tablet) {
		display: block;

		&.mobile-inline {
			display: inline;
		}
	}
}

.mobile-hide {
	@media screen and (max-width: $mobile) {
		display: none !important;
	}
}

.mobile-show {
	display: none;

	@media screen and (max-width: $mobile) {
		display: block;

		&.mobile-inline {
			display: inline;
		}
	}
}

.hidden {
	opacity: 0;
	pointer-events: none;
}

.inline {
	display: inline;
}

.float-right {
	float: right;
}

.page-break {
	width: 100%;
	border-bottom: $space solid $black;
}

.display-none {
	display: none;
}

.spacer {
	width: 100%;
	height: $space * 2;
}


@font-face {
  font-family: 'icons';
  src: url('{{ "icons.eot" | asset_url }}');
  src: url('{{ "icons.eot" | asset_url }}#iefix') format("embedded-opentype"),
       url('{{ "icons.woff" | asset_url }}') format("woff"),
       url('{{ "icons.ttf" | asset_url }}') format("truetype"),
       url('{{ "icons.svg" | asset_url }}#timber-icons') format("svg");
  font-weight: normal;
  font-style: normal;
}

div, * {
  box-sizing: border-box;
  //outline: 1px solid rgba($black, 0.2);
}

body, html {
	font-family: $fontStack;
	font-size: $fontSize;
	letter-spacing: $letterSpacing;
  line-height: $lineHeight;
	margin: 0;
	padding: 0;
	color: $colourText;
	overflow-x: hidden;
	padding-top: 0 !important;

	&.freeze {
		//overflow: hidden;
	}
}

ul {
	list-style: none;
	margin: 0;
	padding: 0;
}

a {
	color: inherit;
	text-decoration: none;

  &:hover {
    color: $colourHover;
  }

  &:active {
    color: $colourActive;
  }
}

@media screen and (max-width: $mobile) {
  a {
    &:active {
      color: $colourHover;
    }
  }
}

p {
	font-size: $fontSize;

  a {
    text-decoration: underline;
  }

	strong {
		font-weight: bolder;
	}
}

h1 {
  font-size: $fontLarge;
  font-family: $fontStackCursive;
	font-weight: inherit;
  text-decoration: underline;
	margin: 0;
	padding: 0;
	text-transform: capitalize;
	display: table;
	margin-bottom: $space;
}

h2 {
	font-size: $fontSize;
}

.wrapper {
	width: 100%;
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	align-items: center;

	&.disabled {
		pointer-events: none;
	}

	.content {
		width: $siteWidth;
		position: relative;
		display: flex;
		flex-direction: column;
		padding-top: $space * 2;

		&.content--index {
			padding-top: 0;
		}

		@media screen and (max-width: $siteWidth) {
	   	@include padding(2, 0);
			padding-top: $space * 2;
			width: 100%;
	  }
	}
}


// navigation
.promo {
  @extend .noselect;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background-color: $white;
  color: $black;
  z-index: $indexPromo;
  transition: transform $transitionSlow, background-color $transition;
  overflow: hidden;

  &:hover {
    //background-color: $black;
    color: $colourHover;
    text-decoration: underline;
  }

  &.active {
    .promo__inner {
      transform: translateY(20px);
    }
  }

  .promo__inner {
    width: 100%;
    font-size: $fontSmall;
    transform: translateY(0);
    transition: transform $transitionSlow;

    a {
      display: flex;
      padding: $space * 0.25;
      justify-content: center;
    }
  }
}

.nav {
  position: fixed;
  width: 100%;
  height: $navHeight;
  display: flex;
  justify-content: center;
  transition: background-color $transition;
  font-size: $fontSize;
  background: $colourNav;
  color: $white;
  z-index: $indexNav;
  @extend .noselect;

  &.nav--index {
    background: rgba($colourNav, 1);
  }

  .nav__inner {
    width: $siteWidth;
    height: 100%;
    display: flex;
    justify-content: space-between;
    padding-bottom: $space;

    .nav__main {
      height: 100%;
      display: flex;
      align-items: flex-end;
    }

    .nav__logo {
      height: 100%;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      font-size: $fontLarge;
      line-height: $fontLarge - 3px;

      .nav__title {
        white-space: nowrap;
        transition: $transition;
        font-family: $fontStackCursive;
        text-transform: uppercase;

        .nav__dagger {
          display: inline-block;
          transition: transform $transition;
        }

        &:hover {
          .nav__dagger {
            //transform: translateY(-5px);
            transform: rotate(45deg);
          }
        }
      }

      img {
        width: 100%;
        height: auto;
      }

      @media screen and (max-width: $mobile) {
        font-size: $fontLargeMobile;
        letter-spacing: normal;
      }
    }

    .nav__mobile {
      display: none;
      align-items: flex-end;
      padding-left: $space * 2;
      padding-bottom: $space / 2;
      cursor: pointer;

      .nav__hamburger {
        width: 26px;
        height: 23px;

        .bar {
          width: 100%;
          background: $white;
          height: 3px;
          margin-bottom: 7px;
          transform-origin: 13px 1.5px;
          transition: $transition;

          &:last-child {
            margin-bottom: 0;
          }
        }
      }

      &.active {
        .nav__hamburger {
          .bar {
            &:first-child {
              transform: translateY(10px) rotate(45deg);
            }

            &:nth-child(2) {
              opacity: 0;
            }

            &:last-child {
              transform: translateY(-10px) rotate(-45deg);
            }
          }
        }
      }
    }
  }

  .nav__item {
    @include padding(1, 0);
    line-height: 1;
    text-transform: uppercase;
    position: relative;

    a {
      position: relative;

      .nav__slider {
        pointer-events: none;
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0%;
        border-bottom: 1px solid $colourHover;
        transition: $transition;
      }

      .dropdown-hint {
        display: inline-block;
        width: 6px;
        height: 6px;
        border-bottom: 1px solid $white;
        border-right: 1px solid $white;
        transform: translate(0px, -3px) rotate(45deg);
      }

      &:hover {
        .nav__slider {
          opacity: 1;
          width: 100%;
        }

        .dropdown-hint {
          border-color: $colourHover;
        }
      }
    }

    &.nav__item--icon {
      padding-left: $space / 2;
      padding-right: 0;

      img {
        width: 20px;
        height: auto;
        transform: translateY(1px);
      }
    }
  }

  @media screen and (max-width: $mobile) {
    position: absolute; // changes to fixed &.active
  }

  &.active {
		transform: translateY(-$navThreshold) !important;
		background: $colourNavActive;
    position: fixed;

    .nav__title {
      color: $red;
    }
  }

  @media screen and (max-width: $tablet) {
    .nav__inner {
      .nav__mobile {
        display: flex;
      }
    }
  }

  @media screen and (max-width: $siteWidth + $space * 8) {
    .nav__inner {
      width: 100%;
      padding-left: $space * 2;
      padding-right: $space; // give some space to hamburger

      .nav__mobile {
        padding-right: $space;
      }
    }
  }
}

.nav-dropdown {
  position: fixed;
  background: $white;
  @include padding(2, 2);
  z-index: $indexNavDropdown;
  opacity: 0;
  pointer-events: none;
  transition: transform $transition;
  transform: translateY(-$space * 2);

  &.active {
    opacity: 1;
    pointer-events: all;
    transform: translateY(0);
  }

  .nav-dropdown__inner {
    @include padding(1.5, 1);
    //padding-right: $space;
    border: $borderSingle;

    .nav-dropdown__item {
      text-align: right;
      text-decoration: underline;
      padding-bottom: $space / 2;

      &:last-child {
        padding-bottom: 0;
      }
    }
  }
}

.mobile-menu {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  background: $colourMobileMenu;
  z-index: $indexMobileMenu;
  padding-top: $navHeight;
  opacity: 0;
  pointer-events: none;
  //transform: translateX(-100vw);
  transition: opacity $transition;

  &.menu-active {
    padding-top: $navHeight - $navThreshold;
  }

  &.active {
    pointer-events: all;
    opacity: 1;
    //transform: translateX(0);
  }

  .mobile-menu__inner {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    color: $white;
    padding: $space * 2;
    font-size: $fontMobileMenu;
    font-family: $fontStackCursive;

    .mobile-menu__wrapper {
      width: 100%;
      flex: 1;
      display: flex;
      justify-content: flex-start;
      align-items: flex-start;

      .mobile-menu__list {
        display: flex;
        flex-direction: column;

        .mobile-menu__item {
          @include padding(0, 0.5);

          a {
            text-decoration: underline;
          }
        }

        .mobile-menu__break {
          @include padding(0, 2);
          width: 100%;

          .mobile-menu__break-line {
            width: 100%;
            border-bottom: $borderDouble;
            border-color: $white;
          }
        }
      }
    }
  }

  .mobile-menu__background {
    position: absolute;
    top: 0;
    left: 0;
    pointer-events: none;
    width: 100%;
    height: 100%;
  }

  .mobile-menu__logo {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 80px;
    padding: $space * 2;
    font-size: $fontLarge;
    cursor: pointer;
  }

  @media screen and (min-width: $tablet + 1) {
    display: none;
  }
}

.breadcrumb {
  @extend .noselect;
  top: 0;
  left: 0;
  width: 100%;
  height: $navHeight + $sizeSubNav;
  padding-top: $navHeight;
  background: $colourBreadcrumb;
  display: flex;
  justify-content: center;
  font-size: $fontSize;
  color: $colourBreadcrumbText;

  .breadcrumb__inner {
    width: $siteWidth;
    height: 100%;
    display: flex;
    //flex-wrap: wrap;
    align-items: center;
    overflow: hidden;

    .list-item {
      padding-right: $space;
      padding-left: $space;
      overflow: hidden;
      text-overflow: ellipsis;
      text-transform: capitalize;
      white-space: nowrap;

      a {
        &:hover {
          opacity: 0.5;
        }
      }

      &:nth-child(1) {
        padding-left: 0;
      }
    }

    &.align-right {
      justify-content: flex-end;

      .list-item {
        &:last-child {
          padding-right: 0;
        }
      }
    }
  }

  @media screen and (max-width: $siteWidth) {
    .breadcrumb__inner {
      width: 100%;
      @include padding(2, 0);
    }
  }

  @media screen and (max-width: $mobile) {
    font-size: $fontSmall;
    height: $navHeight + $sizeSubNav * 0.75;

    .breadcrumb__inner {
      .list-item {
        display: none;
        //padding-right: $space * 0.5;
        //padding-left: $space * 0.5;
        //max-width: 200px;
      }

      span {
        display: none;
      }
    }
  }
}

.breadcrumb-filter {
  flex: 1;
  display: flex;
  justify-content: flex-end;
  position: relative;

  .filter-title {
    @include padding(1, 0);
    border: $borderSingleGrey;
    color: $colourBreadcrumbText;
    border-radius: 3px;
    cursor: pointer;
    display: flex;
    align-items: center;

    .arrow {
      border: solid black;
      border-width: 0 1px 1px 0;
      display: inline-block;
      padding: 2px;
      transform: rotate(45deg);
      -webkit-transform: rotate(45deg);
    }
  }

  select {
    display: none;
  }
}

.filter-dropdown {
  position: fixed;
  display: flex;
  flex-direction: column;
  z-index: $indexFilterDropdown;
  background: $colourBreadcrumb;
  color: $colourBreadcrumbText;
  opacity: 0;
  pointer-events: none;
  width: $sizeFilterDropdown;
  border: $borderSingleGrey;
  @include padding(2, 1);
  border-radius: 3px;
  box-shadow: $dropShadow;

  &.active {
    opacity: 1;
    pointer-events: all;
  }

  .dropdown-item {
    width: 100%;
    letter-spacing: normal;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
    cursor: pointer;
    text-align: right;
    border-bottom: $borderSingleGrey;
    font-size: $fontMedium;
    @include padding(0, 0.25);

    &:hover {
      color: $colourHover;
      border-bottom-color: $colourHover;
    }

    &:last-child {
      border-bottom: none;
    }
  }
}

.filters {
  @extend .noselect;
  width: 100%;
  display: flex;
  justify-content: center;

  .filters__inner {
    width: $siteWidth;
    padding: $space * 2;
    padding-bottom: 0;
    display: flex;
    font-size: $fontSmall;
    color: $colourText;

    .container {
      width: 100%;
      display: flex;
      flex-direction: column;

      .filters-title {
        text-decoration: underline;
        text-transform: uppercase;
      }

      .filters-list {
        width: 100%;
        display: flex;
        padding-top: $space * 1.5;
        transition: $transitionSlow;

        &.hidden {
          opacity: 0.25;
        }

        .filter {
          @include padding(1.5, 0.5);
          cursor: pointer;
          border: 1px solid lighten($colourNav, 25%);
          border-radius: 3px;
          margin-right: $space * 1.5;
          font-size: $fontSmall;
          text-transform: uppercase;

          &:hover {
            background: lighten($colourNav, 25%);
            color: $white;
          }

          &.active {
            background: $colourNav;
            color: $white;
          }
        }
      }

      &.right {
        align-items: flex-end;
      }
    }

    @media screen and (max-width: $siteWidth) {
      width: 100%;
    }

    @media screen and (max-width: $mobile) {
      .container {
        .filters-list {
          flex-wrap: wrap;

          .filter {
            margin-right: $space * 0.5;
            margin-bottom: $space;
          }
        }
      }
    }
  }
}

.footer {
	padding-top: $space * 4;
	padding-bottom: $space * 8;
	width: 100%;
	font-size: $fontSmall;
	color: $white;
	background: $colourNav;
	background: linear-gradient($colourNav, darken($colourNav, 20%));
	display: flex;
	justify-content: center;
	margin-top: $space * 2;
	z-index: $indexFooter;

	.footer__inner {
		width: $siteWidth;
		padding: $space;
		display: flex;

		&.footer__inner--mobile {
			display: none;
		}

		.column {
			width: 25%;
			height: 100%;
			display: flex;
			flex-direction: column;
			padding: $space;

			&:nth-child(3) {
				border-right: none;
			}

			.list-item {
				@include padding(0, 0.25);

				a {
					display: flex;

					&:hover {
						color: $colourHover;
					}
				}
			}
		}

		@media screen and (max-width: $siteWidth) {
			width: 100%;
		}

		@media screen and (max-width: $mobile) {
			display: none;

			&.footer__inner--mobile {
				display: flex;
			}

			.column {
				width: 50%;
			}
		}
	}
}

.payments-title {
	color: $colourText;
}


// structure
.columns {
	width: 100%;
	display: flex;
  font-size: $fontSize;
	@extend .noselect;

	.columns__column {
		min-height: 10vh;
	}

	.columns__column-third {
		width: 33.33%;
		display: none;

		&:nth-child(1) {
			padding-right: $space * 0.66 * 2;
		}
		&:nth-child(2) {
			padding-left: $space * 0.33 * 2;
			padding-right: $space * 0.33 * 2;
		}
		&:nth-child(3) {
			padding-left: $space * 0.66 * 2;
		}

		@media screen and (min-width: $tablet) {
			display: block;
		}
	}

	.columns__column-half {
		width: 50%;
		display: none;

		&:nth-child(4) {
			padding-right: $space;
		}
		&:nth-child(5) {
			padding-left: $space;
		}

		@media screen and (max-width: $tablet - 1) {
			display: block;
		}

		@media screen and (max-width: $mobile) {
			&:nth-child(4) {
				//padding-right: $space / 3;
			}
			&:nth-child(5) {
				//padding-left: $space / 3;
			}
		}
	}
