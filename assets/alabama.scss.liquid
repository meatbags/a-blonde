  width: 100%;
  height: $sizeBreadcrumb;
  display: flex;
  justify-content: center;
  //background: $lightGrey;
  color: $darkGrey;

  .breadcrumb__inner {
    @include pad-x(2);
    width: $large;
    font-size: $fontSmall;
    display: flex;
    align-items: center;

    .list-item {
      padding-right: $space;
      padding-left: $space;

      &:nth-child(1) {
        padding-left: 0;
      }
    }

    @media screen and (max-width: $large) {
      width: 100%;
    }
  }
}

.menu {
	@extend .noselect;
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0 !important;
	left: 0;
	background: rgba($white, 1);
	background: linear-gradient($white, rgba($white, 0.8));
	pointer-events: none;
	transition: opacity $transitionSlow;
	z-index: $zMenu;
	opacity: 0;
	padding-top: $sizeNav;

	&.active {
		opacity: 1;
		pointer-events: all;

		.menu__inner .menu__inner__list .social-media {
			opacity: 1;
		}
	}

	.menu__inner {
		@include pad-y(1);
		width: $large;
		margin: 0 auto;
		height: 100%;
		display: flex;
		flex-direction: column;
		padding: $space;

		.list-item {
			font-size: $fontMedium;
			width: 100%;
			opacity: 0;
			transform: translateX(-50px);
			transition: $transitionSlow;
			display: flex;
			justify-content: flex-end;

			&.active {
				opacity: 1;
				transform: translateX(0px);
			}

			.list-item__inner {
				width: 33.33%;
				color: $colourAlt;
				padding: $space / 2;
				padding-left: $space;
				transition: $transition;
				text-align: right;

				a {
					display: flex;
					justify-content: flex-end;
				}

				&.close-menu {
					cursor: pointer;
				}
			}

			&:hover {
				.list-item__inner {
					opacity: 0.5;
				}
			}
		}

		.divider {
			@include pad-y(0.5);
			width: 100%;
			height: 0;
			display: flex;
			justify-content: flex-end;

			.divider__inner {
				width: 50%;
				border-top: 1px solid $colourDark;
			}
		}
	}

	@media screen and (max-width: $large) {
		.menu__inner {
			width: 100%;
			padding-left: $space;
		}
	}

	@media screen and (max-width: $medium) {
		#cart-items-info {
			display: none;
		}
	}
}

.footer {
	@include pad(4, 0, 8, 0);
	width: 100%;
	font-size: $fontSmall;
	color: $white;
	background: $colourNav;
	background: linear-gradient($colourNav, darken($colourNav, 20%));
	display: flex;
	justify-content: center;
	margin-top: $space * 2;

	.footer__inner {
		width: $large;
		padding: $space;
		display: flex;

		.column {
			width: 25%;
			height: 100%;
			display: flex;
			flex-direction: column;
			padding: $space;

			&:nth-child(3) {
				border-right: none;
			}

			.list-item {
				@include pad-y(0.25);

				a {
					display: flex;

					&:hover {
						color: $colourAlt;
					}
				}
			}
		}
		
		@media screen and (max-width: $large) {
			width: 100%;
		}
	}
}

.payments-title {
	color: $colour;
}


.cart-table {
	font-size: $fontMedium;
	width: 100%;

	.cart-table__row {
		width: 100%;
		display: flex;

		&.mobile-hide {
			@media screen and (max-width: $medium) {
				display: none;
			}
		}

		&.mobile-show {
			display: none;

			@media screen and (max-width: $medium) {
				display: block;
			}
		}

		.cart-table__row__cell {
			padding-top: $space * 2;
			padding-bottom: $space / 2;
			padding-right: $space / 3;

			&.cell-full {
				width: 100%;
			}

			&.cell-third {
				width: 33%;

				&:nth-child(3) {
					text-align: right;
				}
			}

			&.cell-quarter {
				width: 25%;

				&:nth-child(2) {
					text-align: center;
				}
			}

			&:nth-child(4) {
				text-align: right;
			}
		}

		@media screen and (max-width: $small) {
			flex-wrap: wrap;

			.cart-table__row__cell {
				display: flex;
				align-items: center;
				justify-content: center;
				font-weight: bold;

				select, input, .selector-wrapper {
					width: 100%;
				}

				&:nth-child(1) {
					width: 100%;
				}

				&:nth-child(2), &:nth-child(3), &:nth-child(4) {
					width: 50%;
					padding-top: $space;
				}

				&.cell-quarter {
					&:nth-child(1) {
						display: flex;
						justify-content: space-between;
					}

					&:nth-child(2) {
						display: none;
					}
				}
			}
		}

		&:nth-child(1), &.border-bottom {
			font-size: 120%;
			border-bottom: $space solid $colourText;
		}
	}
}

.cart-checkout {
	text-align: right;

	.cart-checkout__preorder {
		font-size: $fontMedium;
	}

	.cart-checkout__disclaimers {
		line-height: 1;
	}

	.cart-checkout__buttons {
		button {
			display: inline;
			padding-left: $space;
			padding-right: $space;
		}
	}

	.cart-prompt {
		font-size: $fontMedium;
	}
}

// shopify auto classes

