				&.active, &:hover {
					color: $colourAlt;
				}
			}
		}

		@media screen and (max-width: $large) {
			width: 100%;
		}

		@media screen and (max-width: $mobile) {
			@include pad-x(0);

			.nav__inner__title {
				font-size: $fontMedium;

				a {
					@include pad(0.25, 0, 0.25, 0);
				}
			}

			.nav__inner__menu {
				font-size: $fontSmall;

				.nav-item {
					padding-left: $space;
				}
			}
		}
	}

	@media screen and (max-width: $mobile) {
		position: absolute;
	}

	&.active {
		position: fixed;
		transform: translateY(-55px) !important;
		background-color: lighten($colourNav, 25%);

		.nav__inner {
			.nav__inner__title {
				font-size: $fontMedium;
				border: 0px solid $colourNav;
				margin-bottom: 0;
				background: none;

				a {
					padding: 0;
				}
			}
		}
	}
}

.sub-nav {
  @extend .noselect;
  top: 0;
  left: 0;
  width: 100%;
  height: $sizeNav + $sizeSubNav;
  padding-top: $sizeNav;
  background: lighten($colourNav, 25%);
  display: flex;
  justify-content: center;
  font-size: $fontSmall;
  color: $darkGrey;

  .sub-nav__inner {
    @include pad(0, 2, 0, 1);
    width: $large;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    align-items: center;

    .list-item {
      padding-right: $space;
      padding-left: $space;
      text-overflow: ellipsis;
      text-transform: capitalize;

      a {
        &:hover {
          opacity: 0.5;
        }
      }

      &:nth-child(1) {
        padding-left: 0;
      }
    }

    &.align-right {
      justify-content: flex-end;

      .list-item {
        &:last-child {
          padding-right: 0;
        }
      }
    }

    @media screen and (max-width: $large) {
      width: 100%;
    }
  }

  @media screen and (max-width: $mobile) {
    font-size: $fontSmaller;
    height: $sizeNav + $sizeSubNav * 0.75;

    .sub-nav__inner {
      @include pad(0, 2, 0, 1);

      .list-item {
        padding-right: $space * 0.5;
        padding-left: $space * 0.5;

        &:nth-child(3) {
          white-space: nowrap;
          max-width: 100px;
          text-overflow: ellipsis;
          overflow: hidden;
        }

        &:last-child {
          max-width: 100%;
        }
      }
    }
  }
}

.promo {
  @extend .noselect;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background-color: $white;
  color: $colourAlt;
  z-index: $zNav + 1;
  transition: transform $transitionSlow, background-color $transition;
  overflow: hidden;

  &:hover {
    background-color: $colourAlt;
    color: $white;
  }

  &.active {
    .promo__inner {
      transform: translateY(20px);
    }
  }

  .promo__inner {
    width: 100%;
    font-family: $fontStackSansSerif;
    font-size: $fontTiny;
    transform: translateY(0);
    transition: transform $transitionSlow;

    a {
      display: flex;
      padding: $space * 0.25;
      justify-content: center;
    }
  }
}

.filters {
  @extend .noselect;
  width: 100%;
  display: flex;
  justify-content: center;

  .filters__inner {
    width: $large;
    padding: $space * 2;
    display: flex;
    font-size: $fontSmall;
    color: $darkGrey;

    .container {
      width: 100%;
      display: flex;
      flex-direction: column;

      .filters-title {

      }

      .filters-list {
        width: 100%;
        display: flex;
        padding-top: $space * 1.5;
        transition: $transitionSlow;

        &.hidden {
          opacity: 0.25;
        }

        .filter {
          @include pad(0.5, 1.5, 0.5, 1.5);
          cursor: pointer;
          border: 1px solid lighten($colourNav, 25%);
          border-radius: 3px;
          margin-right: $space * 1.5;
          font-size: $fontSmaller;
          font-family: $fontStackSansSerif;
          text-transform: uppercase;

          &:hover {
            background: lighten($colourNav, 25%);
            color: $white;
          }

          &.active {
            background: $colourNav;
            color: $white;
          }
        }
      }

      &.right {
        align-items: flex-end;
      }
    }

    @media screen and (max-width: $large) {
      width: 100%;
    }

    @media screen and (max-width: $mobile) {
      .container {
        .filters-list {
          flex-wrap: wrap;

          .filter {
            margin-right: $space * 0.5;
            margin-bottom: $space;
          }
        }
      }
    }
  }
}

.menu {
	@extend .noselect;
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0 !important;
	left: 0;
	background: rgba($white, 1);
	background: linear-gradient($white, rgba($white, 0.8));
	pointer-events: none;
	transition: opacity $transitionSlow;
	z-index: $zMenu;
	opacity: 0;
	padding-top: $sizeNav;

	&.active {
		opacity: 1;
		pointer-events: all;

		.menu__inner .menu__inner__list .social-media {
			opacity: 1;
		}
	}

	.menu__inner {
		@include pad-y(1);
		width: $large;
		margin: 0 auto;
		height: 100%;
		display: flex;
		flex-direction: column;
		padding: $space;

		.list-item {
			font-size: $fontMedium;
			width: 100%;
			opacity: 0;
			transform: translateX(-50px);
			transition: $transitionSlow;
			display: flex;
			justify-content: flex-end;

			&.active {
				opacity: 1;
				transform: translateX(0px);
			}

			.list-item__inner {
				width: 33.33%;
				color: $colourAlt;
				padding: $space / 2;
				padding-left: $space;
				transition: $transition;
				text-align: right;

				a {
					display: flex;
					justify-content: flex-end;
				}

				&.close-menu {
					cursor: pointer;
				}

				@media screen and (max-width: $mobile) {
					width: 100%;
				}
			}

			&:hover {
				.list-item__inner {
					opacity: 0.5;
				}
			}
		}

		.divider {
			@include pad-y(0.5);
			width: 100%;
			height: 0;
			display: flex;
			justify-content: flex-end;

			.divider__inner {
				width: 50%;
				border-top: 1px solid $colourDark;
			}
		}
	}

	@media screen and (max-width: $large) {
		.menu__inner {
			width: 100%;
			padding-left: $space;
		}
	}
}

.footer {
	@include pad(4, 0, 8, 0);
	width: 100%;
	font-size: $fontSmall;
	color: $white;
	background: $colourNav;
	background: linear-gradient($colourNav, darken($colourNav, 20%));
	display: flex;
	justify-content: center;
	margin-top: $space * 2;
	z-index: $zFooter;

	.footer__inner {
		width: $large;
		padding: $space;
		display: flex;

		.column {
			width: 25%;
			height: 100%;
			display: flex;
			flex-direction: column;
			padding: $space;

			&:nth-child(3) {
				border-right: none;
			}

			.list-item {
				@include pad-y(0.25);

				a {
					display: flex;

					&:hover {
						color: $colourAlt;
					}
				}
			}
		}

		@media screen and (max-width: $large) {
			width: 100%;
		}
	}

	@media screen and (max-width: $mobile) {
		font-size: $fontSmaller;

		.footer__inner {
			padding: $space / 2;

			.column {
				padding: $space / 2;
			}
		}
	}
}

.payments-title {
	color: $colour;
}


.cart {
	width: 100%;
	display: flex;
	padding-top: $space * 2;
	padding-bottom: $space * 4;
	font-size: $fontSize;

	.cart-products {
		width: 62%;
		padding-right: $space * 2;

		.cart-products-title {
			width: 100%;
			border-bottom: 1px solid black;
			padding-bottom: $space;
			padding-top: $space * 3;
		}

		.cart-item {
			@include pad-y(4);
			padding-right: $space;
			width: 100%;
			display: flex;

			.cart-item__image {
				width: 20%;

				img {
					max-width: 100%;
				}
			}

			.cart-item__info {
				width: 80%;

				.cart-item-title {
					width: 100%;
					display: flex;

					.title {
						width: 70%;

						a {
							&:hover {
								opacity: 0.5;
							}
						}

						.variant {
							font-size: 80%;
							color: $darkGrey;
						}
					}

					.remove {
						width: 30%;
						padding-top: $space * 0.5;
						text-align: right;
						font-size: $fontSmall;

						&:hover {
							opacity: 0.5;
						}
					}
				}

				.cart-item-price {
					display: flex;
					flex-direction: column;
					align-items: flex-start;
					padding-top: $space * 2;

					.variable-price {
						display: flex;
						padding-bottom: $space;
						border-bottom: 1px solid black;

						.single-price {
							font-size: $fontSmall;
							padding-right: $space;
						}

						.item-qty {
							@include pad(0, 0, 0, 1.5);
							width: 65px;

							.js-qty {
								display: flex;
								width: 100%;

								button {
									width: 20px;
									border: none;
									border-radius: 0;
									display: flex;
									align-items: center;
									justify-content: center;
									background: #eeeeee;

									&:hover {
										opacity: 0.5;
									}
								}

								input {
									width: 25px;
									text-align: right;
									border: none;
									border-radius: 0;
									padding-right: $space / 2;
									padding-bottom: $space / 3;
									background: #efefef;

									&:hover {
										opacity: 0.5;
									}
								}
							}
						}
					}

					.total-price {
						width: 100%;
						padding-top: $space / 2;

						.tax-notice {
							font-size: $fontTiny;
						}
					}
				}
			}
		}
	}

	.cart-checkout {
		width: 38%;
		padding: $space;
		text-align: right;
		font-size: $fontSize;

		.checkout {
			padding: $space * 2;
			background-color: lighten($colourNav, 40%);

			.checkout-title {
				width: 100%;
				border-bottom: 1px solid black;
				padding-bottom: $space;
			}

			p {
				font-size: inherit;
			}

			.checkout-subtotal {
				padding-top: $space * 3;
				padding-bottom: $space;

				.tax-notice {
					font-size: $fontTiny;
				}
			}

			.checkout-buttons {
				@include pad(0.5, 0, 1.5, 0);
				width: 100%;
				display: flex;
				flex-direction: column;
				align-items: flex-end;

				button {
					border-radius: 0;
					padding: $space;
					font-family: $fontStack;
					font-size: $fontSize;
					font-weight: normal;
					margin-right: $space / 2;
				}

				.update-cart {
					@include pad(0, 0.0, 0.5, 0.0);
					border: none;
					text-decoration: underline;
					font-size: $fontSmaller + 1px;
					margin-bottom: $space / 2;
					background: none;

					&:hover {
						opacity: 0.5;
					}
				}

				.checkout-cart {
					border: $borderBlack;
					@include pad(1, 2, 1, 2);
				}
			}

			.disclaimers {
				width: 100%;
				font-size: $fontTiny;
			}

			.instructions {
				@include pad(1, 3, 1.5, 0);
				width: 100%;

				.title {
					font-size: $fontSmall;
					padding-bottom: $space;
					font-style: italic;
					//text-decoration: underline;
				}

				textarea {
					width: 100%;
					font-size: $fontTiny;
				}
			}

			.payments {
				font-size: $fontSmaller;
				font-style: italic;
				display: flex;
				justify-content: flex-end;

				.payment-type {
					img {
						width: 28px;
						filter: saturate(50%);
						padding-right: $space / 2;
					}
				}
			}
		}
	}

	@media screen and (max-width: $mobile) {
		flex-wrap: wrap;

		.cart-products {
			width: 100%;
			padding-right: 0;

			.cart-item {
				.cart-item__image {
					width: 23%;
					padding-top: $space;
				}

				.cart-item__info {
					width: 77%;
					padding-left: $space * 2;

					.cart-item-title {
						font-size: $fontSmall;

						.remove {
							padding: $space * 0.25;
							font-size: $fontMedium;
						}
					}

					.cart-item-price {
						.total-price {
							font-size: $fontSmall;
						}
					}
				}
			}
		}

		.cart-checkout {
			width: 100%;
			padding: 0;
			text-align: left;

			.checkout {
				.checkout-buttons {
					align-items: flex-start;
					justify-content: flex-start;
					flex-direction: column;

					.update-cart {
						@include pad(0.5, 0, 0.5, 0);
					}

					.checkout-cart {
						margin-top: $space;
					}
				}

				.instructions {
					@include pad(1, 0, 2.5, 0);
				}

				.payments {
					justify-content: flex-start;
				}
			}
		}
	}
}

