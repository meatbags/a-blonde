@keyframes rotatehue {
    0% { filter: hue-rotate(0deg); }
    100% { filter: hue-rotate(360deg); }
}

@keyframes rotate {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}


$top : #1d0001;
$bottom : #b20019;

$zBackground: $indexLanding;
$zVideo: $indexLanding + 1;
$zLogo: $indexLanding + 2;

#landing-video {
	@extend .noselect;
	position: fixed;
  top: 50%;
  left: 50%;
  min-width: 100%;
  min-height: 100%;
  width: auto;
  height: auto;
  z-index: -100;
  -ms-transform: translateX(-50%) translateY(-50%);
  -moz-transform: translateX(-50%) translateY(-50%);
  -webkit-transform: translateX(-50%) translateY(-50%);
  transform: translateX(-50%) translateY(-50%);
  background-size: cover;
	z-index: $zVideo;
	opacity: 0.75;
}

.landing-background {
	@extend .noselect;
	position: fixed;
	top: 0 !important;
	width: 100vw;
	height: 100vh;
	z-index: $zBackground;
	-webkit-transition: opacity $transitionSlow;
