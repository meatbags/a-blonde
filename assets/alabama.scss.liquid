		}
	}
}


// navigation
.promo {
  @extend .noselect;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background-color: $white;
  color: $black;
  z-index: $indexPromo;
  transition: transform $transitionSlow, background-color $transition;
  overflow: hidden;

  &:hover {
    background-color: $black;
    color: $colourHover;
  }

  &.active {
    .promo__inner {
      transform: translateY(20px);
    }
  }

  .promo__inner {
    width: 100%;
    font-family: $fontStackSansSerif;
    font-size: $fontTiny;
    transform: translateY(0);
    transition: transform $transitionSlow;

    a {
      display: flex;
      padding: $space * 0.25;
      justify-content: center;
    }
  }
}

.nav {
  position: fixed;
  width: 100%;
  height: $navHeight;
  display: flex;
  justify-content: center;
  transition: background-color $transition;
  font-size: $fontSize;
  background: $colourNav;
  color: $white;
  z-index: $indexNav;
  @extend .noselect;

  &.nav--index {
    background: rgba($colourNav, 1);
  }

  .nav__inner {
    width: $siteWidth;
    height: 100%;
    display: flex;
    justify-content: space-between;
    padding-bottom: $space / 2;

    .nav__main {
      height: 100%;
      display: flex;
      align-items: flex-end;
    }

    .nav__logo {
      height: 100%;
      display: flex;
      align-items: flex-end;
      justify-content: center;
      padding-bottom: $space / 2;
      font-size: $fontLarge;
      line-height: $fontLarge - 3px;

      .nav__title {
        white-space: nowrap;
        transition: $transition;
        font-family: $fontStackCursive;
        text-transform: uppercase;

        .nav__dagger {
          display: inline-block;
          transition: $transition;
        }

        &:hover {
          .nav__dagger {
            transform: translateY(-5px);
          }
        }
      }

      img {
        width: 100%;
        height: auto;
      }
    }
  }

  .nav__item {
    @include padding(1, 0.5);
    line-height: 1;
    //text-transform: uppercase;
    position: relative;

    a {
      position: relative;

      .nav__slider {
        pointer-events: none;
        position: absolute;
        bottom: 0;
        left: 0;
        width: 0%;
        border-bottom: 1px solid $colourHover;
        transition: $transition;
      }

      .dropdown-hint {
        display: inline-block;
        width: 6px;
        height: 6px;
        border-bottom: 1px solid $white;
        border-right: 1px solid $white;
        transform: translate(0px, -2px) rotate(45deg);
      }

      &:hover {
        .nav__slider {
          opacity: 1;
          width: 100%;
        }

        .dropdown-hint {
          border-color: $colourHover;
        }
      }
    }

    &.nav__item--icon {
      @include padding(0.5, 0.5);
      padding-bottom: $space / 2 - 1px;

      img {
        width: 20px;
        height: auto;
      }

      a:hover {
        opacity: 0.5;
      }
    }
  }

  &.active {
		transform: translateY(-$navThreshold) !important;
		background: darken($colourNav, 20%);

    .nav__title {
      color: $red;
    }
  }

  @media screen and (max-width: $siteWidth) {
    .nav__inner {
      width: 100%;
      padding-left: $space * 2;
      padding-right: $space * 2;
    }
  }
}

.breadcrumb {
  @extend .noselect;
  top: 0;
  left: 0;
  width: 100%;
  height: $navHeight + $sizeSubNav;
  padding-top: $navHeight;
  background: $colourBreadcrumb;
  display: flex;
  justify-content: center;
  font-size: $fontSmall;
  color: $colourBreadcrumbText;

  .breadcrumb__inner {
    width: $large;
    height: 100%;
    display: flex;
    flex-wrap: wrap;
    align-items: center;

    .list-item {
      padding-right: $space;
      padding-left: $space;
      text-overflow: ellipsis;
      text-transform: capitalize;

      a {
        &:hover {
          opacity: 0.5;
        }
      }

      &:nth-child(1) {
        padding-left: 0;
      }
    }

    &.align-right {
      justify-content: flex-end;

      .list-item {
        &:last-child {
          padding-right: 0;
        }
      }
    }

    @media screen and (max-width: $large) {
      width: 100%;
    }
  }

  @media screen and (max-width: $mobile) {
    font-size: $fontSmaller;
    height: $navHeight + $sizeSubNav * 0.75;

    .sub-nav__inner {
      @include pad(0, 2, 0, 1);

      .list-item {
        padding-right: $space * 0.5;
        padding-left: $space * 0.5;

        &:nth-child(3) {
          white-space: nowrap;
          max-width: 100px;
          text-overflow: ellipsis;
          overflow: hidden;
        }

        &:last-child {
          max-width: 100%;
        }
      }
    }
  }
}

.filters {
  @extend .noselect;
  width: 100%;
  display: flex;
  justify-content: center;

  .filters__inner {
    width: $large;
    padding: $space * 2;
    display: flex;
    font-size: $fontSmall;
    color: $colourText;

    .container {
      width: 100%;
      display: flex;
      flex-direction: column;

      .filters-title {

      }

      .filters-list {
        width: 100%;
        display: flex;
        padding-top: $space * 1.5;
        transition: $transitionSlow;

        &.hidden {
          opacity: 0.25;
        }

        .filter {
          @include pad(0.5, 1.5, 0.5, 1.5);
          cursor: pointer;
          border: 1px solid lighten($colourNav, 25%);
          border-radius: 3px;
          margin-right: $space * 1.5;
          font-size: $fontSmaller;
          font-family: $fontStackSansSerif;
          text-transform: uppercase;

          &:hover {
            background: lighten($colourNav, 25%);
            color: $white;
          }

          &.active {
            background: $colourNav;
            color: $white;
          }
        }
      }

      &.right {
        align-items: flex-end;
      }
    }

    @media screen and (max-width: $large) {
      width: 100%;
    }

    @media screen and (max-width: $mobile) {
      .container {
        .filters-list {
          flex-wrap: wrap;

          .filter {
            margin-right: $space * 0.5;
            margin-bottom: $space;
          }
        }
      }
    }
  }
}

.footer {
	@include pad(4, 0, 8, 0);
	width: 100%;
	font-size: $fontSmall;
	color: $white;
	background: $colourNav;
	background: linear-gradient($colourNav, darken($colourNav, 20%));
	display: flex;
	justify-content: center;
	margin-top: $space * 2;
	z-index: $indexFooter;

	.footer__inner {
		width: $large;
		padding: $space;
		display: flex;

		.column {
			width: 25%;
			height: 100%;
			display: flex;
			flex-direction: column;
			padding: $space;

			&:nth-child(3) {
				border-right: none;
			}

			.list-item {
				@include pad-y(0.25);

				a {
					display: flex;

					&:hover {
						color: $colourHover;
					}
				}
			}
		}

		@media screen and (max-width: $large) {
			width: 100%;
		}
	}

	@media screen and (max-width: $mobile) {
		font-size: $fontSmaller;

		.footer__inner {
			padding: $space / 2;

			.column {
				padding: $space / 2;
			}
		}
	}
}

.payments-title {
	color: $colourText;
}


// structure
.columns {
	width: 100%;
	display: -webkit-flex;
	display: flex;
  font-size: $fontSize;
	@extend .noselect;

	.columns__column {
		min-height: 10vh;
	}

	.columns__column-third {
		width: 33.33%;
		display: none;

		&:nth-child(1) {
			padding-right: $space * 0.66;
		}
		&:nth-child(2) {
			padding-left: $space * 0.33;
			padding-right: $space * 0.33;
		}
		&:nth-child(3) {
			padding-left: $space * 0.66;
		}

		@media screen and (min-width: $medium) {
			display: block;
		}
	}

	.columns__column-half {
		width: 50%;
		display: none;

		&:nth-child(4) {
			padding-right: $space / 2;
		}
		&:nth-child(5) {
			padding-left: $space / 2;
		}

		@media screen and (max-width: $medium - 1) {
			//and (min-width: $small)
			display: block;
		}

		@media screen and (max-width: $mobile) {
			&:nth-child(4) {
				padding-right: $space / 3;
			}
			&:nth-child(5) {
				padding-left: $space / 3;
			}
		}
	}

	.columns__column-single {
		width: 100%;
		display: none;

		@media screen and (max-width: $small - 1) {
			//display: block;
		}
	}
}

.grid-item {
  width: 100%;
  margin-bottom: $space;
  padding: $space;

  .grid-item__inner {
    width: 100%;
    display: flex;

    a {
      flex: 1;
      position: relative;

      .grid-item__image {
        width: 100%;
        overflow: hidden;

        img {
          width: 100%;
          height: auto;
          display: block;
          transition: $transitionSlow;
        }
      }

      .grid-item__prompt {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        background: linear-gradient(to top, rgba(darken($red, 18%), 0.75), rgba($black, 0));
        color: white;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        align-items: flex-end;
        padding: $space * 2;
        opacity: 0;
        transition: $transitionSlow;

        .grid-item__title {
          font-size: $fontLarge;
          text-align: right;
        }

        .grid-item__subtitle {
          margin-top: $space / 2;
          font-size: $fontSize;
          text-align: right;
        }
      }

      &:hover {
        img {
          filter: brightness(125%) contrast(150%);
        }

        .grid-item__prompt {
          opacity: 1;
        }
      }
    }
  }
}

.collection {
	position: relative;
	width: 100%;
	margin-bottom: $space;
	padding: $space;
	-webkit-transition: opacity $transitionSlower;
	transition: opacity $transitionSlower;

	a {
    .collection__name {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
			background: $black; // fallback
      background: linear-gradient(rgba($black, 0.0), rgba($black, 0.75));
      opacity: 0;
      transition: $transition;
      display: flex;
      justify-content: flex-end;
      align-items: flex-end;
			overflow: visible;
			padding: $space * 2.5;

      .collection__name__inner {
				width: 100%;
				white-space: normal;
				color: white;
				display: flex;
				flex-direction: column;
				align-items: flex-end;
				justify-content: flex-end;

				.item-header {
					max-width: 100%;
					text-align: right;
					font-size: $fontMediumLarge;
				}

				.item-type {
					font-size: $fontSize;
				}

				.item-separator {
					font-size: $fontSize;
					padding-top: $space;
					padding-bottom: $space;
				}

				@media screen and (max-width: $mobile) {
					.item-header {
						text-align: right;
						font-size: $fontSize;
					}

					.item-type {
						font-size: $fontSmall;
					}

					.item-separator {
						font-size: $fontSmall;
					}
				}
      }
    }

		img {
			display: block;
			width: 100%;
			height: auto;
			transition: $transitionSlow;
			margin: 0;
		}

		&:hover, &:active, &.scrolled {
			img {
				filter: saturate(50%) contrast(150%);
			}

			.collection__name {
				opacity: 1;
			}
		}
	}
}

.product {
	width: 100%;
	margin-bottom: $space;
	transition: opacity $transitionSlow;
	padding: $space;

	.product__image {
		position: relative;
		overflow: hidden;

		a {
			img {
				display: block;
				width: 100%;
				height: auto;
				-webkit-transition: $transitionSlow;
				transition: $transitionSlow;
				margin: 0;
			}

			.product__prompt {
				position: absolute;
				width: 100%;
				height: 100%;
				top: 0;
				left: 0;
				pointer-events: none;
				display: flex;
				align-items: flex-end;
				justify-content: flex-end;
				opacity: 0;
				transition: $transitionSlow;

				.popup {
					@include pad(0.5, 1, 0.5, 1);
					font-size: $fontSmaller;
					background: $white;
					overflow: hidden;
					margin: $space * 2;
				}
			}
		}
	}

	.product__info {
		@include pad(1, 0, 1, 0);
		width: 100%;
		display: flex;
		color: $colourText;

		.name {
			font-size: $fontSmall;
			width: 65%;
			overflow: hidden;
			white-space: nowrap;
			text-overflow: ellipsis;

			&:hover {
				opacity: 0.5;
			}
		}

		.price {
			position: relative;
			text-align: right;
			font-size: $fontSmall;
			width: 35%;

			.from{
				font-size: 9px;
			}

			.tax-notice {
				font-size: 9px;
				position: absolute;
				right: 0;
				top: 0;
				padding-top: $space * 2.5;
			}
		}

		@media screen and (max-width: $mobile) {
			flex-wrap: wrap;

			.name {
				width: 100%;
				font-size: $fontSmaller;
			}

			.price {
				width: 100%;
				font-size: $fontSmaller;
				text-align: left;
			}
		}
	}

	@media screen and (max-width: $mobile) {
		padding: $space / 4;
	}

	&:hover, &:active, &.scrolled {
		a {
			img {
				transform: scale(1.05, 1.05);
			}

			.product__prompt {
				opacity: 1;
			}
		}
	}
}


