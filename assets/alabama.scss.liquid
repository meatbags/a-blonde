.columns {
	width: 100%;
	display: -webkit-flex;
	display: flex;
  font-size: $fontSize;
	@extend .noselect;

	.columns__column {
		min-height: 10vh;
	}

	.columns__column-third {
		width: 33.33%;
		display: none;

		&:nth-child(1) {
			padding-right: $space * 0.66;
		}
		&:nth-child(2) {
			padding-left: $space * 0.33;
			padding-right: $space * 0.33;
		}
		&:nth-child(3) {
			padding-left: $space * 0.66;
		}

		@media screen and (min-width: $medium) {
			display: block;
		}
	}

	.columns__column-half {
		width: 50%;
		display: none;

		&:nth-child(4) {
			padding-right: $space / 2;
		}
		&:nth-child(5) {
			padding-left: $space / 2;
		}

		@media screen and (max-width: $medium - 1) and (min-width: $small) {
			display: block;
		}
	}

	.columns__column-single {
		width: 100%;
		display: none;

		@media screen and (max-width: $small - 1) {
			display: block;
		}
	}
}

.collection {
	position: relative;
	width: 100%;
	margin-bottom: $space;
	-webkit-transition: opacity $transitionSlower;
	transition: opacity $transitionSlower;

	a {
    .collection__name {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
			background: $colourDark; // fallback
      background: linear-gradient(rgba($colourDark, 0.0), rgba($colourDark, 0.75));
      opacity: 0;
      transition: $transition;
      display: flex;
      justify-content: flex-end;
      align-items: flex-end;
			overflow: visible;
			padding: $space * 2.5;

      .collection__name__inner {
				white-space: normal;
				color: white;
				display: flex;
				flex-direction: column;
				align-items: flex-end;
				justify-content: flex-end;

				.item-header {
					text-align: right;
					font-size: $fontMediumLarge;
				}

				.item-type {
					font-size: $fontSize;
				}

				.item-separator {
					font-size: $fontSize;
					padding-top: $space;
					padding-bottom: $space;
				}
      }
    }

		img {
			display: block;
			width: 100%;
			height: auto;
			-webkit-filter: saturate(0%);
			filter: saturate(0%);
			-webkit-transition: $transitionSlow;
			transition: $transitionSlow;
			margin: 0;
		}

		&:hover, &:active, &.scrolled {
			img {
				filter: saturate(0%) contrast(150%);
			}

			.collection__name {
				opacity: 1;
			}
		}
	}
}

.collection, .product {
	position: relative;
	width: 100%;
	margin-bottom: $space;
	-webkit-transition: opacity $transitionSlow;
	transition: opacity $transitionSlow;

	a {
		img {
			display: block;
			width: 100%;
			height: auto;
			-webkit-filter: saturate(0%);
			filter: saturate(0%);
			-webkit-transition: $transitionSlow;
			transition: $transitionSlow;
			margin: 0;
		}

		.product__name {
			@include pad(0, 0, 0.25, 0.5);
			position: absolute;
			pointer-events: none;
			opacity: 0;
			width: 100%;
			white-space: normal;
			letter-spacing: 1px;
			transition: letter-spacing $transitionNormal;
			word-break: normal;
			top: auto;
			bottom: 0;
			text-align: right;
			text-transform: none;
			color: $colourAlt;

			.product__name__text {

			}

			&.small {
				font-size: 50%;
			}
		}

		.product__prompt {
			word-break: normal;
			top: auto;
			bottom: 0;
			text-align: right;
			text-transform: none;
			color: $colourAlt;

			&.small {
				font-size: 50%;
			}
		}
	}

	&:hover, &:active, &.scrolled {
		a {
			img {
				filter: saturate(0%) contrast(150%);
			}
			
			.product__prompt, .product__name, .article__name {
				opacity: 1;
			}

			.product__name {
				padding-bottom: $space;
				padding-right: $space * 2.25;
			}
		}
	}
}

