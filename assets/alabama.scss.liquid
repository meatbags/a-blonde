// colour

$black: #000;
$white: #fff;
$colour: $black;
$colourAlt: #ff9900;
$colourSelected: #000;
$colourBackground: $white;
$colourText: #000;
$grey: #aaa;
$colourNav: #808080;

// size
$space: 10px;
$spaceBorder: $space / 3;
$sizeNav: 140px;

// index
$zNav: 50;

$indexMenu: 40;
$indexMenuButton: 60;
$indexPrompt: 25;
$indexLanding: 100;
$indexLandingPrompt: 101;
$indexLoading: 200;
$indexAudio: 55;
$indexFooter: 36;

// transition
$transition: 0.2s;
$transitionNormal: 0.2s;
$transitionSlow: 0.5s;
$transitionSlower: 0.75s;

// breakpoints
$small: 480px;
$medium: 769px;
$large: 1160px;

$fontStack: 'Playfair Display', sans-serif;
$letterSpacing: 1px;
$lineHeight: 1.2;

// size
$fontSize: 24px;
$fontLarge: 40px;
$fontMedium: 48px;
$fontSmall: 32px;

// relative
$fontSizeH1: 80%;
$fontSizeH2: 60%;
$fontSizeP: 50%;
$fontSizeNav: 100%;
$fontSizeMenu: 100%;
$fontSizeFooter: 50%;
$fontSizeFooterMobile: 44%;
$fontSizeCart: 50%;
$fontSizeCartMobile: 45%;
$fontSizeFormLabel: 65%;
$fontSizeFormInput: 55%;
$fontSizeSmaller: 65%;
$fontSizeHalf: 50%;

// type utils
.font-smaller {
	font-size: $fontSizeSmaller;
}

.font-half {
	font-size: $fontSizeHalf;
}

.underline {
	text-decoration: underline;
}

.capitalise {
	text-transform: capitalize;
}

.noselect {
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	-o-user-select: none;
	user-select: none;
}

@mixin pad-y($y) {
	padding-top: $space * $y;
	padding-bottom: $space * $y;
}

@mixin pad-x($x) {
	padding-left: $space * $x;
	padding-right: $space * $x;
}

@mixin pad-xy($x, $y) {
	padding-top: $space * $y;
	padding-bottom: $space * $y;
	padding-left: $space * $x;
	padding-right: $space * $x;
}

.mobile-hide {
	@media screen and (max-width: $medium) {
		display: none;
	}
}

.mobile-show {
	display: none;

	@media screen and (max-width: $medium) {
		display: block;
	}
}

.hidden {
	opacity: 0;
	pointer-events: none;
}

.inline {
	display: inline;
}

.float-right {
	float: right;
}

.page-break {
	width: 100%;
	border-bottom: $space solid $colour;
}

.display-none {
	display: none;
}

.spacer {
	width: 100%;
	height: $space * 2;
}

/* Slider */

.slick-slider {
    position: relative;
    display: block;
    box-sizing: border-box;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -ms-touch-action: pan-y;
    touch-action: pan-y;
    -webkit-tap-highlight-color: transparent;
}

.slick-list {
    position: relative;
    overflow: hidden;
    display: block;
    margin: 0;
    padding: 0;

    &:focus {
        outline: none;
    }

    &.dragging {
        cursor: pointer;
        cursor: hand;
    }
}

.slick-slider .slick-track, .slick-slider .slick-list {
    -webkit-transform: translate3d(0, 0, 0);
    -moz-transform: translate3d(0, 0, 0);
    -ms-transform: translate3d(0, 0, 0);
    -o-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
}

.slick-track {
    position: relative;
    left: 0;
    top: 0;
    display: block;

    &:before,
    &:after {
        content: "";
        display: table;
    }

    &:after {
        clear: both;
    }

    .slick-loading & {
        visibility: hidden;
    }
}

.slick-slide {
    float: left;
    height: 100%;
    min-height: 1px;
    [dir="rtl"] & {
        float: right;
    }
    img {
        display: block;
    }
    &.slick-loading img {
        display: none;
    }

    display: none;

    &.dragging img {
        pointer-events: none;
    }

    .slick-initialized & {
        display: block;
    }

    .slick-loading & {
        visibility: hidden;
    }

    .slick-vertical & {
        display: block;
        height: auto;
        border: 1px solid transparent;
    }
}

.slick-arrow.slick-hidden {
    display: none;
}


@font-face {
  font-family: 'icons';
  src: url('{{ "icons.eot" | asset_url }}');
  src: url('{{ "icons.eot" | asset_url }}#iefix') format("embedded-opentype"),
       url('{{ "icons.woff" | asset_url }}') format("woff"),
       url('{{ "icons.ttf" | asset_url }}') format("truetype"),
       url('{{ "icons.svg" | asset_url }}#timber-icons') format("svg");
  font-weight: normal;
  font-style: normal;
}

body, html {
	font-family: $fontStack;
	font-size: $fontLarge;
	font-weight: bold;
	letter-spacing: $letterSpacing;
	margin: 0;
	padding: 0;
	color: $colourText;
	overflow-x: hidden;
	padding-top: 0 !important;
	background: $colourBackground;

	&.freeze {
		overflow: hidden;
	}

	@media screen and (max-width: $medium) {
		font-size: $fontMedium;
	}

	@media screen and (max-width: $small) {
		font-size: $fontSmall;
	}
}

p {
	font-size: $fontSizeP;

	strong {
		font-weight: bolder;
		text-transform: uppercase;
	}
}

ul {
	list-style: none;
	margin: 0;
	padding: 0;
}

a {
	color: inherit;
	text-decoration: none;

	&:hover {
		color: $colourAlt;
	}
}

h1 {
	font-size: $fontSizeH1;
	font-weight: inherit;
	margin: 0;
	padding: 0;
	text-transform: capitalize;
	border-bottom: $space solid $colourText;
	display: table;
	margin-bottom: $space;
}

h2 {
	font-size: $fontSizeH2;
}

div, * {
	box-sizing: border-box;
}

.nav {
	@extend .noselect;
	position: fixed;
	top: 0 !important;
	left: 0;
	width: 100%;
	height: $sizeNav;
	padding: $space;
	padding-bottom: 0;
	color: $white;
	background: $colourNav;
	z-index: $zNav;
	font-size: $fontLarge;
	display: flex;
	justify-content: center;

	.nav__inner {
		@include pad-x(1);
		width: $large;
		height: 100%;
		display: flex;
		align-items: flex-end;
		justify-content: space-between;

		.nav__inner__title {
			border-bottom: $space solid $white;
			margin-bottom: $space;
			font-weight: normal;

			&:hover, &:active {
				color: $colourAlt;
				border-bottom: $space solid $colourAlt;
			}
		}

		.nav__inner__menu {
			display: flex;

			.nav-item {

			}
		}

		@media screen and (max-width: $large) {
			width: 100%;
		}
	}
}


.menu-button {
	@extend .noselect;

	position: fixed;
	right: calc(#{$space} + 0.5 * (100% - #{$large}));
	top: 80px;
	top: auto !important;
	z-index: $indexMenuButton;
	border-bottom: $space solid $colourSelected;
	margin-bottom: $space;
	-webkit-transform: translateZ(0);
	transform: translateZ(0);
	font-size: $fontSizeNav;
	padding-top: $space * 2;

	@media screen and (max-width: $large) {
		right: $space;
	}

	.menu-button__inner {
		-webkit-transition: -webkit-transform $transition;
		transition: transform $transition;
		cursor: pointer;
		color: $colour;
	}

	&:hover, &:active {
		//border-bottom: $space solid $colourAlt;

		.menu-button__inner {
			color: $colourAlt;
		}
	}

	&.active {
		.menu-button__inner {
			-webkit-transform: rotate(45deg);
			transform: rotate(45deg);
		}
	}
}

.menu {
	@extend .noselect;

	width: 100vw;
	height: 100%;
	background: $colourBackground;
	position: fixed;
	top: 0 !important;
	left: 0;
	pointer-events: none;
	-webkit-transition: $transitionSlow;
	transition: $transitionSlow;
	-ms-transform: translateY(-90vh);
	-webkit-transform: translateY(-90vh);
	-moz-transform: translateY(-90vh);
	transform: translateY(-90vh);
	z-index: $indexMenu;
	font-size: $fontSizeMenu;

	.menu__inner {
		width: $large;
		margin: 0 auto;
		height: 100%;
		padding-left: $space / 2;
		padding-top: $sizeNav;

		.menu__inner__list {
			position: relative;
			list-style: none;
			height: 100%;
			color: $colourSelected;

			a {
				text-transform: lowercase;
				//text-decoration: underline;

				&:hover, &:active {
					color: $colourAlt;
				}
			}

			.social-media {
				position: absolute;
				bottom: 0;
				opacity: 0;
				-webkit-transition: opacity $transitionSlow;
				transition: opacity $transitionSlow;

				.float-right {
					display: none;
				}
			}
		}
	}

	@media screen and (max-width: $large) {
		.menu__inner {
			width: 100%;
			padding-left: $space;
		}
	}

	@media screen and (max-width: $medium) {
		-ms-transform: translateY(-100vh);
		-webkit-transform: translateY(-100vh);
		-moz-transform: translateY(-100vh);
		transform: translateY(-100vh);

		.menu__inner {
			padding-top: $sizeNav;

			.menu__inner__list {
				.social-media {
					display: none;
				}
			}
		}

		#cart-items-info {
			display: none;
		}
	}

	@media screen and (max-width: $small) {
		-ms-transform: translateY(-100vh);
		-webkit-transform: translateY(-100vh);
		-moz-transform: translateY(-100vh);
		transform: translateY(-100vh);

		.menu__inner {
			padding-top: $sizeNav;
		}
	}

	&.active {
		opacity: 1;
		pointer-events: all;
		-ms-transform: translateY(0);
		-webkit-transform: translateY(0);
		-moz-transform: translateY(0);
		transform: translateY(0);

		.menu__inner .menu__inner__list .social-media {
			opacity: 1;
		}
	}
}

.wrapper {
	width: 100%;
	min-height: 100vh;
	display: flex;
	justify-content: center;
	padding-top: $sizeNav + $space;

	.content {
		width: $large;
		padding-left: $space;
		padding-right: $space;

		@media screen and (max-width: $large) {
			width: 100%;
		}
	}
}


.columns {
	width: 100%;
	display: -webkit-flex;
	display: flex;
  font-size: $fontSize;

	.columns__column {
		min-height: 10vh;

		.collection, .product {
			position: relative;
			width: 100%;
			margin-bottom: $space;
			-webkit-transition: opacity $transitionSlow;
			transition: opacity $transitionSlow;

			a {
				img {
					display: block;
					width: 100%;
					height: auto;
					-webkit-filter: saturate(0%);
					filter: saturate(0%);
					-webkit-transition: $transitionSlow;
					transition: $transitionSlow;
					margin: 0;
				}

        .collection__name {
          position: absolute;
          top: 0;
          left: 0;
          width: 100%;
          height: 100%;
          background: rgba(0,0,0,0.5);
          opacity: 0;
          transition: $transition;
          display: flex;
          justify-content: center;
          align-items: center;
					overflow: visible;

          .collection__name__inner {
            width: 85%;
            text-transform: uppercase;
						text-align: center;
						white-space: normal;
						color: white;
          }
        }

				.collection__prompt, .product__name, .product__prompt, .article__name {
					position: absolute;
					top: 0;
					left: 0;
					color: white;
					pointer-events: none;
					opacity: 0;
					width: 100%;
					white-space: normal;
					text-transform: uppercase;
					padding: $space / 2;
					padding-top: 0;
					padding-bottom: 0;
					z-index: $indexPrompt;
					letter-spacing: 1px;
					transition: letter-spacing $transitionNormal;
				}

				.collection__prompt {
					top: auto;
					bottom: 0;
					text-align: right;
					color: $colourAlt;
					text-transform: lowercase;

					&.small {
						font-size: 50%;
					}
				}

				.product__name {
					word-break: normal;
					top: auto;
					bottom: 0;
					text-align: right;
					text-transform: none;
					padding-bottom: $space / 4;
					padding-right: $space / 2;
					color: $colourAlt;

					.product__name__text {
					}

					&.small {
						font-size: 50%;
					}
				}

				.article__name {
					word-break: normal;
					text-transform: none;
					transition: padding $transitionNormal, letter-spacing $transitionNormal;
					font-size: 85%;

					&.small {
						font-size: 50%;
					}
				}

				.product__prompt {
					word-break: normal;
					top: auto;
					bottom: 0;
					text-align: right;
					text-transform: none;
					color: $colourAlt;

					&.small {
						font-size: 50%;
					}
				}
			}

			&:hover, &:active, &.scrolled {
				a {
					img {
						-webkit-filter: saturate(100%);
						filter: saturate(100%);
					}

					.collection__prompt, .collection__name, .product__prompt, .product__name, .article__name {
						opacity: 1;
					}

					.product__name {
						padding-bottom: $space;
						padding-right: $space * 2.25;
					}
				}
			}
		}
	}

	.columns__column-third {
		width: 33.33%;
		display: none;

		&:nth-child(1) {
			padding-right: $space * 0.66;
		}
		&:nth-child(2) {
			padding-left: $space * 0.33;
			padding-right: $space * 0.33;
		}
		&:nth-child(3) {
			padding-left: $space * 0.66;
		}

		@media screen and (min-width: $medium) {
			display: block;
		}
	}

	.columns__column-half {
		width: 50%;
		display: none;

		&:nth-child(4) {
			padding-right: $space / 2;
		}
		&:nth-child(5) {
			padding-left: $space / 2;
		}

		@media screen and (max-width: $medium - 1) and (min-width: $small) {
			display: block;
		}
	}

	.columns__column-single {
		width: 100%;
		display: none;

		@media screen and (max-width: $small - 1) {
			display: block;
		}
	}
}

.product-page {
	.product-page__images {
		display: flex;
		
		.product-page__images-main {
			width: 40%;
			padding-right: $space;
			padding-top: $space / 2;
			
			img {
				width: 100%;
				height: auto;
			}
		}
		
		.product-page__images-gallery {
			width: 60%;
			padding-left: $space;
			padding-top: $space / 2;
			
			.grid-uniform {
				display: flex;
				flex-wrap: wrap;
				
				.grid__item {
					width: 33%;
					height: 20vh;
					
					.grid__item__inner {
						width: 100%;
						height: 100%;
						overflow: hidden;
						
						a {
							display: flex;
							width: 100%;
							height: 100%;
							align-items: center;
							justify-content: center;
							
							img {
								object-fit: cover;
								width: 100% !important;
								height: 100% !important;
								filter: saturate(0%);
								transition: $transition;

								&:hover {
									filter: saturate(100%);
								}
							}
						}
					}
				}
			}
		}
	}
	
	.product-page__orders {
		padding-top: $space;
		padding-bottom: $space * 6;
		width: 100%;
	}
	
	form {
		width: 100%;

		select, button, input {
			border: $space / 2 solid $colourSelected;
			padding: $space;
			cursor: pointer;
			background: none;
			
			@media (max-width: $small) {
				border: $space / 4 solid $colourSelected;
			}
		}

		#AddToCart {
			background: #ccc;
		}
	}
}
.cart-table {
	width: 100%;
	font-size: $fontSizeCart;

	.cart-table__row {
		width: 100%;
		display: flex;

		&.mobile-hide {
			@media screen and (max-width: $medium) {
				display: none;
			}
		}

		&.mobile-show {
			display: none;

			@media screen and (max-width: $medium) {
				display: block;
			}
		}

		.cart-table__row__cell {
			padding-top: $space * 2;
			padding-bottom: $space / 2;
			padding-right: $space / 3;

			&.cell-full {
				width: 100%;
			}

			&.cell-third {
				width: 33%;

				&:nth-child(3) {
					text-align: right;
				}
			}

			&.cell-quarter {
				width: 25%;

				&:nth-child(2) {
					text-align: center;
				}
			}

			&:nth-child(4) {
				text-align: right;
			}
		}

		@media screen and (max-width: $small) {
			flex-wrap: wrap;

			.cart-table__row__cell {
				display: flex;
				align-items: center;
				justify-content: center;
				font-weight: bold;

				select, input, .selector-wrapper {
					width: 100%;
				}

				&:nth-child(1) {
					width: 100%;
				}

				&:nth-child(2), &:nth-child(3), &:nth-child(4) {
					width: 50%;
					padding-top: $space;
				}

				&.cell-quarter {
					&:nth-child(1) {
						display: flex;
						justify-content: space-between;
					}

					&:nth-child(2) {
						display: none;
					}
				}
			}
		}

		&:nth-child(1), &.border-bottom {
			font-size: 120%;
			border-bottom: $space solid $colourText;
		}
	}

	@media screen and (max-width: $medium) {
		font-size: $fontSizeCartMobile;
	}
}

.cart-checkout {
	text-align: right;

	.cart-checkout__preorder {
		font-size: $fontSizeCart;
	}

	.cart-checkout__disclaimers {
		line-height: 1;
	}

	.cart-checkout__buttons {
		button {
			display: inline;
			padding-left: $space;
			padding-right: $space;
		}
	}

	.cart-prompt {
		font-size: $fontSizeCart;

		@media screen and (max-width: $medium) {
			font-size: $fontSizeCartMobile;
		}
	}
}

