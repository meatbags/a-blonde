	font-family: $fontStack;
	font-size: $fontSize;
	letter-spacing: $letterSpacing;
	margin: 0;
	padding: 0;
	color: $colourText;
	overflow-x: hidden;
	padding-top: 0 !important;

	&.freeze {
		//overflow: hidden;
	}

	@media screen and (max-width: $medium) {
