// colour
$black: #000;
$white: #fff;
$colour: $black;
$colourAlt: #a8020e;
$colourDark: darken($colourAlt, 5%);
$colourSelected: #000;
$colourBackground: $white;
$colourText: #000;
$grey: #aaa;
$darkGrey: #444;
$colourNav: #808090;
$lightGrey: lighten($colourNav, 40%);

// size
$space: 8px;
$spaceBorder: $space / 3;
$sizeNav: 120px;
$sizeSubNav: 50px;
$sizeBreadcrumb: 35px;

// index
$zNav: 100;
$zMenu: 50;
$zLandingPage: 200;
$zLoadingScreen: 300;

// transition
$transition: 0.25s;
$transitionNormal: 0.25s;
$transitionSlow: 0.5s;
$transitionSlower: 0.75s;

// breakpoints
$small: 480px;
$medium: 769px;
$tablet: 960px;
$large: 1220px;

// borders
$border: 4px double $white;

$fontStack: 'Playfair Display', serif;
$fontStackSansSerif: 'Karla', sans-serif;
$letterSpacing: 1px;
$lineHeight: 1.2;

// size
$fontTiny: 12px;
$fontSmall: 16px;
$fontSize: 20px;
$fontMedium: 24px;
$fontMediumLarge: 29px;
$fontLarge: 32px;

.noselect {
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	-o-user-select: none;
	user-select: none;
}

@mixin pad-y($y) {
	padding-top: $space * $y;
	padding-bottom: $space * $y;
}

@mixin pad-x($x) {
	padding-left: $space * $x;
	padding-right: $space * $x;
}

@mixin pad-xy($x, $y) {
	padding-top: $space * $y;
	padding-bottom: $space * $y;
	padding-left: $space * $x;
	padding-right: $space * $x;
}

@mixin pad($t, $l, $b, $r) {
	padding-top: $space * $t;
	padding-bottom: $space * $b;
	padding-left: $space * $l;
	padding-right: $space * $r;
}

.mobile-hide {
	@media screen and (max-width: $medium) {
		display: none;
	}
}

.mobile-show {
	display: none;

	@media screen and (max-width: $medium) {
		display: block;
	}
}

.hidden {
	opacity: 0;
	pointer-events: none;
}

.inline {
	display: inline;
}

.float-right {
	float: right;
}

.page-break {
	width: 100%;
	border-bottom: $space solid $colour;
}

.display-none {
	display: none;
}

.spacer {
	width: 100%;
	height: $space * 2;
}

/* Slider */

.slick-slider {
    position: relative;
    display: block;
    box-sizing: border-box;
    -webkit-touch-callout: none;
    -webkit-user-select: none;
    -khtml-user-select: none;
    -moz-user-select: none;
    -ms-user-select: none;
    user-select: none;
    -ms-touch-action: pan-y;
    touch-action: pan-y;
    -webkit-tap-highlight-color: transparent;
}

.slick-list {
    position: relative;
    overflow: hidden;
    display: block;
    margin: 0;
    padding: 0;

    &:focus {
        outline: none;
    }

    &.dragging {
        cursor: pointer;
        cursor: hand;
    }
}

.slick-slider .slick-track, .slick-slider .slick-list {
    -webkit-transform: translate3d(0, 0, 0);
    -moz-transform: translate3d(0, 0, 0);
    -ms-transform: translate3d(0, 0, 0);
    -o-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
}

.slick-track {
    position: relative;
    left: 0;
    top: 0;
    display: block;

    &:before,
    &:after {
        content: "";
        display: table;
    }

    &:after {
        clear: both;
    }

    .slick-loading & {
        visibility: hidden;
    }
}

.slick-slide {
    float: left;
    height: 100%;
    min-height: 1px;
    [dir="rtl"] & {
        float: right;
    }
    img {
        display: block;
    }
    &.slick-loading img {
        display: none;
    }

    display: none;

    &.dragging img {
        pointer-events: none;
    }

    .slick-initialized & {
        display: block;
    }

    .slick-loading & {
        visibility: hidden;
    }

    .slick-vertical & {
        display: block;
        height: auto;
        border: 1px solid transparent;
    }
}

.slick-arrow.slick-hidden {
    display: none;
}


