form {
	width: 100%;
	font-family: $fontStack;
}


input {
	width: 100%;
}

label {
	display: block;
	font-size: $fontSizeFormLabel;
	font-family: $fontStack;
}

textarea {
	display: block;
	font-family: $fontStack;
	font-size: $fontSizeFormLabel;
	margin-top: $space * 2;
	margin-bottom: $space * 2;
	padding: $space;
	padding-top: $space / 2;
	width: 100%;
	border: $spaceBorder solid $colourText;
	font-size: $fontSizeFormInput !important;
	letter-spacing: 0;
	outline: none !important;
}

select, button, input {
	font-family: $fontStack;
	display: block;
	margin-top: $space * 2;
	margin-bottom: $space * 2;
	padding: $space;
	padding-top: $space / 2;
	padding-bottom: $space / 2;
	border: none;
	border-bottom: $spaceBorder solid $colourText;
	font-size: $fontSizeFormInput;
	letter-spacing: 0;
	outline: none !important;
}

button {
	border: $spaceBorder solid $colourText;
	font-weight: bold;
	cursor: pointer;
	font-family: $fontStack;

	&:hover {
		background: none;
	}
}

.js-qty {
	input {
		border: $spaceBorder solid $colourText;
	}
}

input[type="submit"] {
	padding-top: $space;
	padding-bottom: $space;
	cursor: pointer;
	font-size: 100%;
	font-size: $fontSizeFormInput;
	outline: none !important;
	font-family: $fontStack;
	border: $spaceBorder solid $colourText;

	&:hover {
		background: none;
	}
}

input[type="checkbox"] {
	display: inline;
	width: 20px;
	height: 20px;
	cursor: pointer;
	background: none;
	border: $spaceBorder solid black;
	outline: none !important;
	font-family: $fontStack;
}

.jp-audio {
	position: fixed;
	bottom: 0;
	left: 0;
	z-index: $indexAudio;
	font-size: $fontSizeMenu;

	.jp-pause, .jp-play {
		border: none;
		background: none;
		padding: $space * 1.6;
		outline: none !important;
		margin: 0;
		transition: $transition;
		font-weight: bold;
		font-size: 22px;

		img {
			width: 20px;
			height: 20px;
		}

		&.active {
			display: none;
		}
	}

	.jp-play {
		text-decoration: line-through;
	}

	@media screen and (max-width: $large) {
		left: auto;
		right: 0;
	}

	@media screen and (max-width: $medium) {
		display: none;
	}
}

$sliderSize: 72.5vh;

.slider-offset {
	height: $sliderSize;
}

.slick-slider {
	position: absolute;
	left: 0;
	width: 100%;
	padding-top: $space;
	padding-bottom: $space / 2;
	cursor: crosshair;
}

.slick-track {
	height: $sliderSize;
}

.slick-slide {
	transition: $transition;
	outline: none !important;
	padding: $space;
	display: flex;
	align-items: center;
	filter: saturate(0%);

	img {
		height: 100%;
		width: auto;
	}

	&.slick-active {
		filter: saturate(100%);
	}
}

.slick-next, .slick-previous {
	display: none;
}

iframe {
	width: 100%;
	height: 65vh;

	@media (max-width: $large) {
		height: 55vh;
	}

	@media (max-width: $medium) {
		height: 50vh;
	}
}


