.collection {
	position: relative;
	width: 100%;
	margin-bottom: $space;
	-webkit-transition: opacity $transitionSlower;
	transition: opacity $transitionSlower;

	a {
    .collection__name {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
			background: $colourDark; // fallback
      background: linear-gradient(rgba($colourDark, 0.0), rgba($colourDark, 0.75));
      opacity: 0;
      transition: $transition;
      display: flex;
      justify-content: flex-end;
      align-items: flex-end;
			overflow: visible;
			padding: $space * 2.5;

      .collection__name__inner {
				width: 100%;
				white-space: normal;
				color: white;
				display: flex;
				flex-direction: column;
				align-items: flex-end;
				justify-content: flex-end;

				.item-header {
					max-width: 100%;
					text-align: right;
					font-size: $fontMediumLarge;
				}

				.item-type {
					font-size: $fontSize;
				}

				.item-separator {
					font-size: $fontSize;
					padding-top: $space;
					padding-bottom: $space;
				}

				@media screen and (max-width: $mobile) {
					.item-header {
						text-align: right;
						font-size: $fontSize;
					}

					.item-type {
						font-size: $fontSmall;
					}

					.item-separator {
						font-size: $fontSmall;
					}
				}
      }
    }

		img {
			display: block;
			width: 100%;
			height: auto;
			-webkit-filter: saturate(0%);
			filter: saturate(0%);
			-webkit-transition: $transitionSlow;
			transition: $transitionSlow;
			margin: 0;
		}

		&:hover, &:active, &.scrolled {
			img {
				-webkit-filter: saturate(0%) contrast(150%);
				filter: saturate(0%) contrast(150%);
			}

			.collection__name {
				opacity: 1;
			}
		}
	}
}

.product {
	width: 100%;
	margin-bottom: $space;
	-webkit-transition: opacity $transitionSlow;
	transition: opacity $transitionSlow;
	padding: $space;

	.product__image {
		position: relative;
		overflow: hidden;

		a {
			img {
				display: block;
				width: 100%;
				height: auto;
				-webkit-transition: $transitionSlow;
				transition: $transitionSlow;
				margin: 0;
			}

			.product__prompt {
				position: absolute;
				width: 100%;
				height: 100%;
				top: 0;
				left: 0;
				pointer-events: none;
				display: flex;
				align-items: flex-end;
				justify-content: flex-end;
				opacity: 0;
				transition: $transitionSlow;

				.popup {
					@include pad(0.5, 1, 0.5, 1);
					font-size: $fontSmaller;
					background: $white;
					overflow: hidden;
					margin: $space * 2;
				}
			}
		}
	}

	.product__info {
		@include pad(1, 0, 1, 0);
		width: 100%;
		display: flex;
		color: $darkGrey;

		.name {
			font-size: $fontSmall;
			width: 65%;
			overflow: hidden;
			white-space: nowrap;
			text-overflow: ellipsis;

			&:hover {
				opacity: 0.5;
			}
		}

		.price {
			position: relative;
			text-align: right;
			font-size: $fontSmall;
			width: 35%;

			.from{
				font-size: 9px;
			}

			.tax-notice {
				font-size: 9px;
				position: absolute;
				right: 0;
				top: 0;
				padding-top: $space * 2.5;
			}
		}

		@media screen and (max-width: $mobile) {
			flex-wrap: wrap;

			.name {
				width: 100%;
				font-size: $fontSmaller;
			}

			.price {
				width: 100%;
				font-size: $fontSmaller;
				text-align: left;
			}
		}
	}

	@media screen and (max-width: $mobile) {
		padding: $space / 4;
	}

	&:hover, &:active, &.scrolled {
		a {
			img {
				-webkit-transform: scale(1.05, 1.05);
				transform: scale(1.05, 1.05);
			}

			.product__prompt {
				opacity: 1;
			}
		}
	}
}

