.cart-checkout {
  width: 38%;
  padding: $space;
  font-size: $fontSize;

  .checkout {
    padding: $space * 2;
    background: $backgroundCartForm;
    border: $borderSingle;

    .checkout-title {
      width: 100%;
      font-size: $fontLarge;
      border-bottom: 1px solid black;
      padding-bottom: $space;
      text-transform: uppercase;
    }

    p {
      font-size: inherit;
    }

    .checkout-subtotal {
      padding-top: $space * 3;
      padding-bottom: $space;

      .tax-notice {
        font-size: $fontSmall;
      }
    }

    .instructions {
      @include padding(0, 1);
      padding-right: $space * 3;
      width: 100%;

      .title {
        font-size: $fontSmall;
        padding-bottom: $space;
        font-style: italic;
      }

      textarea {
        width: 100%;
        font-size: $fontSmall;
      }
    }

    .checkout-buttons {
      @include padding(0, 1);
      width: 100%;

      button {
        border-radius: 0;
        padding: $space;
        font-family: $fontStack;
        font-size: $fontSize;
        font-weight: normal;
      }

      .update-cart {
        padding-bottom: $space / 2;
        border: none;
        text-decoration: underline;
        font-size: $fontSmall;
        margin-bottom: $space / 2;
        background: none;
        padding-left: 0;

        &:hover {
          opacity: 0.5;
        }
      }

      .checkout-cart {
        border: $borderBlack;
        @include padding(2, 1);
      }
    }

    .disclaimers {
      width: 100%;
      font-size: $fontSmall;
    }

    .payments {
      font-size: $fontSmall;
      font-style: italic;
      display: flex;

      .payment-type {
        img {
          width: 28px;
          filter: saturate(50%);
          padding-right: $space / 2;
        }
      }
    }
  }

  @media screen and (max-width: $mobile) {
		width: 100%;
		padding: 0;
		text-align: left;

		.checkout {
			.checkout-buttons {
				align-items: flex-start;
				justify-content: flex-start;
				flex-direction: column;

				.update-cart {
					@include padding(0, 0.5);
				}

				.checkout-cart {
					margin-top: $space;
				}
			}

			.instructions {
        padding-top: $space;
        padding-bottom: $space * 2.5;
			}

			.payments {
				justify-content: flex-start;
			}
		}
  }
}


// product page
.product-page {
	width: 100%;
	display: flex;
	padding: 0;
	padding-top: $space * 3;
	flex-wrap: wrap;

	.product-page__title {
		width: 100%;
		font-size: $fontLarge;
		font-family: $fontStackCursive;
		padding-bottom: $space;
		margin-bottom: $space * 2;
		border-bottom: $borderBlack;
	}

	@media screen and (max-width: $mobile) {
		padding-top: $space;

		.product-page__title {
			font-size: $fontLargeMobile;
			letter-spacing: normal;
		}
	}
}

.product-page__gallery {
  width: 10%;
  display: flex;
  flex-direction: column;
  padding-right: $space;

  .list-item {
    margin-bottom: $space;
    width: 100%;
    cursor: pointer;

    img {
      width: 100%;
      height: auto;
    }

    &.active {
      img {
        -webkit-filter: saturate(0%);
        filter: saturate(0%);
        outline: 4px double black;
      }
    }
  }

  @media screen and (max-width: $mobile) {
    width: 40px;
  }
}

.product-page__image {
  width: 55%;
  overflow: hidden;
  @include padding(1, 0);

  .product-page__image__inner {
    width: 100%;
    height: 100%;
    overflow: visible;
    position: relative;

    .list-item {
      position: relative;
      pointer-events: none;

      img {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: auto;
        opacity: 0;
        //transition: $transitionSlow;
      }

      &.active {
        pointer-events: all;

        img {
          opacity: 1;
        }
      }
    }
  }

  @media screen and (max-width: $mobile) {
    flex: 1;
    height: 300px;
    display: flex;

    .product-page__image__inner {
      width: 100%;
      height: 100%;
      overflow: hidden;
      position: relative;
      flex: 1;

      .list-item {
        position: absolute;
        pointer-events: none;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;

        img {
          width: 100%;
          height: 100%;
          object-fit: contain;
        }
      }

      &:after {
        content: "";
        background-image: $backgroundImage1;
        background-color: $colourBreadcrumb;
        background-size: 32px 32px;
        opacity: 0.2;
        position: absolute;
        top: 0;
        left: 0;
        bottom: 0;
        right: 0;
        z-index: -1;
      }
    }
  }
}

.product-page__info {
  width: 35%;
  min-height: 110vh;
  padding-left: $space;
  font-size: $fontSmall;

  .product-page__description {
    padding-bottom: $space;

    p {
      font-size: inherit;
      margin-top: 0;
    }
  }

  .product-page__orders {
    .cart-form {
      width: 100%;
      background: $backgroundCartForm;
      padding: $space;
      border: $borderSingle;

      .cart-variant-select {
        padding-bottom: $space;
        width: 100%;

        select {
          width: 100%;
          border: 1px solid black;
          border-radius: 0;
          font-size: $fontSmall;

          option {
            direction: ltr;
          }
        }
      }

      .cart-price {
        width: 100%;
        font-size: $fontSize;
        padding-bottom: $space;

        .tax-notice {
          font-size: $fontSmall;
        }
      }

      .cart-add {
        width: 100%;

        #AddToCart {
          @include padding(2, 1.5);
          font-size: $fontSize;
          border: $borderBlack;
          font-weight: normal;
          text-transform: uppercase;
        }
      }

      .cart-prompt {
        width: 100%;
        font-size: $fontSmall;
        padding-top: $space;

        .underline {
          text-decoration: underline;
        }
      }
    }
  }

  @media screen and (max-width: $mobile) {
    width: 100%;
    min-height: 0;
    padding-left: 0;

    .product-page__description {
      padding-top: $space;
      padding-bottom: $space;
    }
