// colour
$black: #080808;
$white: #fff;
$red: #a8020e;
$colourHover: magenta;
$colourActive: yellow;
$colourNav: #1c1c1c;
$colourBreadcrumb: #aaa;
$colourBreadcrumbText: #444;
$colourText: $black;

// size
$space: 8px;
$spaceBorder: $space / 3;
$sizeSubNav: 50px;
$sizeBreadcrumb: 35px;
$siteWidth: 1160px;
$navHeight: 74px;
$navThreshold: 32px;

// index
$indexNav: 100;
$indexPromo: 101;
$indexFooter: 10;
$zMenu: 50;
$zLandingPage: 200;
$zLoadingScreen: 300;
$indexPassword: 999;

// transition
$transition: 0.25s;
$transitionNormal: 0.25s;
$transitionSlow: 0.5s;
$transitionSlower: 0.75s;

// breakpoints
$small: 480px;
$mobile: 700px;
$medium: 769px;
$tablet: 960px;
$large: $siteWidth;

// borders
$border: 4px double $white;
$borderBlack: 4px double $black;

$fontStack: 'Karla', serif;
$fontStackSansSerif: 'Karla', sans-serif;
$fontStackCursive: 'Rubik', serif;//'UnifrakturMaguntia', cursive;
$lineHeight: 1.2;
$letterSpacing: 1px;//normal;

// sizing
$fontTiny: 12px;
$fontSmaller: 13px;
$fontSmall: 14px;
$fontSize: 16px;
$fontMedium: 20px;
$fontMediumLarge: 29px;
$fontLarge: 28px;
$fontHuge: 56px;

.noselect {
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	-o-user-select: none;
	user-select: none;
}

@mixin padding($x, $y) {
	padding-top: $space * $y;
	padding-bottom: $space * $y;
	padding-left: $space * $x;
	padding-right: $space * $x;
}

@mixin pad-y($y) {
	padding-top: $space * $y;
	padding-bottom: $space * $y;
}

@mixin pad-x($x) {
	padding-left: $space * $x;
	padding-right: $space * $x;
}

@mixin pad-xy($x, $y) {
	padding-top: $space * $y;
	padding-bottom: $space * $y;
	padding-left: $space * $x;
	padding-right: $space * $x;
}

@mixin pad($t, $l, $b, $r) {
	padding-top: $space * $t;
	padding-bottom: $space * $b;
	padding-left: $space * $l;
	padding-right: $space * $r;
}

.mobile-hide {
	@media screen and (max-width: $medium) {
		display: none;
	}
}

.mobile-show {
	display: none;

	@media screen and (max-width: $medium) {
		display: block;

		&.mobile-inline {
			display: inline;
		}
	}
}

.hidden {
	opacity: 0;
	pointer-events: none;
}

.inline {
	display: inline;
}

.float-right {
	float: right;
}

.page-break {
	width: 100%;
	border-bottom: $space solid $black;
}

.display-none {
	display: none;
}

.spacer {
	width: 100%;
	height: $space * 2;
}


@font-face {
