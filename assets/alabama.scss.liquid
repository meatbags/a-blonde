	display: -webkit-flex;
	display: flex;
	width: 100%;

	button, input {
		margin: 0;
		padding: 0;
		display: inline;
		background: none;
		padding-top: $space / 2;
		padding-bottom: $space / 2;

		.visually-hidden {
			display: none;
		}
	}

	input {
		width: 60%;
		padding-left: $space / 2;
	}

	button {
		width: 20%;

		&:nth-child(1) {
			border-right: none;
		}

		&:nth-child(3) {
			border-left: none;
		}
	}
