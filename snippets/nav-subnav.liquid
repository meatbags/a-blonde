<div class='sub-nav'>
  <div class='sub-nav__inner'>
    {% if template != 'index' %}
      {% if template == "product" %}
          {{ product.title }}.
      {% elsif template == "collection" %}
          {{ collection.title }}.
      {% elsif template == "product" %}
        {% for collection in product.collections %}
          {% assign index = 0 %}
          {% if index == 0 %}
            <a href='{{ collection.url }}'>
          {% endif %}
          {% assign index = index | plus:1 %}
        {% endfor %}
      {% elsif template == 'list-collections' %}
        Shop.
      {% elsif template == 'cart' %}
        Cart.
      {% else %}
        {{ page.title }}.
      {% endif %}
    {% else %}
      <div class='list-item'>New Looks</div>||
    {% endif %}
  </div>
</div>
