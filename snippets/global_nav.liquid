{% include 'global_promotional-bar' %}

{% if template == 'index' %}
<div class='nav nav--index'>
{% else %}
<div class='nav'>
{% endif %}
	<div class='nav__inner'>
		<div class='nav__logo'>
			<div class='nav__title'>
				<a href='/'>Alabama <span class='nav__dagger'>&#10016;</span> Blonde</a>
			</div>
		</div>
		<div class='nav__main tablet-hide'>
			<div class='nav__item'><a href='/#home'>Home<div class='nav__slider'></div></a></div>
			<div class='nav__item'><a href='/pages/about/'>About<div class='nav__slider'></div></a></div>
			<div class='nav__item' data-target='#dropdown-shop'><a href='/collections/'>Shop&nbsp;<div class='dropdown-hint'></div><div class='nav__slider'></div></a></div>
			<div class='nav__item'><a href='/blogs/blog/'>Memoir<div class='nav__slider'></div></a></div>
			<div class='nav__item'><a href='/blogs/video/'>Videos<div class='nav__slider'></div></a></div>
			<div class='nav__item'><a href='/blogs/editorials/'>Editorials<div class='nav__slider'></div></a></div>
			<div class='nav__item'><a href='/blogs/events/'>Events<div class='nav__slider'></div></a></div>
			<div class='nav__item nav__item--icon'>
				<a href='https://www.instagram.com/alabamablonde' target='_blank'>
					{{ 'insta.png' | asset_url | img_tag }}
				</a>
			</div>
			<div class='nav__item nav__item--icon'>
				<a href='/cart/'>
					{{ 'shopping-cart.png' | asset_url | img_tag }}
				</a>
			</div>
		</div>
		<div id='mobile-menu-button' class='nav__mobile'>
			<div class='nav__hamburger'>
				<div class='bar'></div>
				<div class='bar'></div>
				<div class='bar'></div>
			</div>
		</div>
	</div>
</div>

{% comment %} HIDDEN MOBILE MENU {% endcomment %}
<div id='mobile-menu' class='mobile-menu'>
	<div class='mobile-menu__inner'>
		<div id='close-mobile-menu' class='mobile-menu__logo'>&#10016;</div>
		<div class='mobile-menu__background'></div>
		<div class='mobile-menu__wrapper'>
			<div class='mobile-menu__list'>
				<div class='mobile-menu__item'><a href='/#home'>Home</a></div>
				<div class='mobile-menu__break'>
					<div class='mobile-menu__break-line'></div>
				</div>
				<div class='mobile-menu__item'><a href='/pages/about/'>About</a> &nbsp; <a href='/collections/'>Shop</a></div>
				<div class='mobile-menu__item'><a href='/blogs/blog/'>Memoir</a> &nbsp; <a href='/blogs/editorials/'>Editorials</a></div>
				<div class='mobile-menu__item'><a href='/blogs/video/'>Videos</a> &nbsp; <a href='/blogs/events/'>Events</a></div>
				<div class='mobile-menu__item'><a href='/pages/contact/'>Contact</a> &nbsp; <a href='/pages/bespoke/'>Bespoke</a></div>
				<div class='mobile-menu__break'>
					<div class='mobile-menu__break-line'></div>
				</div>
				<div class='mobile-menu__item'>
	        <a href="/cart/">
	          {{ 'layout.cart.title' | t }}
	          {% if cart.item_count > 0 %}
	            <span id="cart-items-info">
	              &nbsp;({{ cart.total_price | money }})
	            </span>
	          {% endif %}
	        </a>
	      </div>
				<div class='mobile-menu__item'><a href='https://www.instagram.com/alabamablonde' target='_blank'>Instagram</a></div>
			</div>
		</div>
	</div>
</div>

{% comment %} HIDDEN DROPDOWN NAVS {% endcomment %}
<div id='dropdown-about' class='nav-dropdown'>
	<div class='nav-dropdown__inner'>
		<div class='nav-dropdown__item'><a href='/pages/about/'>About</a></div>
		<div class='nav-dropdown__item'><a href='/pages/brand/'>Brand</a></div>
	</div>
</div>
<div id='dropdown-shop' class='nav-dropdown'>
	<div class='nav-dropdown__inner'>
		<div class='nav-dropdown__item'><a href='/collections/'>Collections</a></div>
		<div class='nav-dropdown__item'><a href='/pages/bespoke/'>Bespoke</a></div>
	</div>
</div>

{% unless template == 'index' or template == 'page.about' %}
	{% include 'breadcrumb' %}
{% endunless %}
