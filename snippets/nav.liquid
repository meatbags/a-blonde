					{% if index == 0 %}
						<a href='{{ collection.url }}'>
					{% endif %}
					{% assign index = index | plus:1 %}
				{% endfor %}
			{% else %}
				<a href='/#collections'>
			{% endif %}
			{% if template == "product" %}
					<div class="nav__inner__title-main">{{ product.title }}</div>
			{% elsif template == "collection" %}
					<div class="nav__inner__title-main">{{ collection.title }}</div>
			{% else %}
					<div class="nav__inner__title-main">Alabama Blonde.</div>
			{% endif %}
			</a>
