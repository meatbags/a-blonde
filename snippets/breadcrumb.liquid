<!-- /snippets/breadcrumb.liquid -->
{% comment %}
  Documentation - http://docs.shopify.com/support/your-website/navigation/creating-a-breadcrumb-navigation
{% endcomment %}

<div class='breadcrumb'>
  <div class='breadcrumb__inner'>
    <div class='list-item'>
      <a href="/#home" title="{{ 'general.breadcrumbs.home_link_title' | t }}">
        <span class='mobile-hide'>{{ 'general.breadcrumbs.home' | t }}</span>
        <span class='mobile-show'>H</span>
      </a>
    </div>
    {% if template == 'cart' %}
      <span aria-hidden="true">//</span>
      <div class='list-item'>Cart</div>

    {% elsif template contains 'product' %}
      {% if collection %}
        <span aria-hidden="true">//</span>
        {% if collection.handle %}
          {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
          <div class='list-item'>
            {{ collection.title | link_to: url }}
          </div>
        {% endif %}
      {% endif %}
      <span aria-hidden="true">//</span>
      <div class='list-item'>{{ product.title }}</div>

    {% elsif template == 'list-collections' %}
      <span aria-hidden="true">//</span>
      <div class='list-item'>
        <span>Collections</span>
      </div>

    {% elsif template contains 'collection' and collection.handle %}
      <span aria-hidden="true">//</span>
      <div class='list-item'>
        <a href="/collections/"><span>Collections</span></a>
      </div>
      <span aria-hidden="true">//</span>
      {% if current_tags %}
        {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
        <div class='list-item'>
          {{ 'Shop' | link_to: url }}
        </div>
        <span aria-hidden="true">//</span>
        <div class='list-item'>
          {{ current_tags | join: " + " }}
        </div>
      {% else %}
        {% if collection.handle == 'all' %}
          <div class='list-item'>Shop</div>
        {% else %}
          <div class='list-item'>{{ collection.title }}</div>
        {% endif %}
      {% endif %}

    {% elsif template == 'blog' %}
      <span aria-hidden="true">//</span>
      {% if current_tags %}
        <div class='list-item'>
          {{ blog.title | link_to: blog.url }}
        </div>
        <span aria-hidden="true">//</span>
        <span>{{ current_tags | join: " + " }}</span>
      {% else %}
        <div class='list-item'>
          <span>{{ blog.title }}</span>
        </div>
      {% endif %}

    {% elsif template == 'article' %}
      <span aria-hidden="true">//</span>
      <div class='list-item'>
        {{ blog.title | link_to: blog.url }}
      </div>
      <span aria-hidden="true">//</span>
      <div class='list-item'>
        <span>{{ article.title }}</span>
      </div>

    {% elsif template contains 'page' %}
      <span aria-hidden="true">//</span>
      <div class='list-item'>
        <span>{{ page.title }}</span>
      </div>

    {% else %}
      <span aria-hidden="true">//</span>
      <div class='list-item'>
        <span>{{ page_title }}</span>
      </div>
    {% endif %}
  </div>
</div>
